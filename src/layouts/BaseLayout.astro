---
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Fonts from "@/assets/fonts/Fonts.astro";
import "@/assets/styles/reset.css";
const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/icon.ico" type="image/x-icon">
    <meta name={description}>
    <meta name="author" content="Nicolás Alejandro Tapié">
    <meta name="robots" content="index, follow">
    <Fonts />
    <title>{title}</title>
</head>
<body>
    <div class="layout">
        <Header />

        <h1 class="title__title">Memory</h1>

        <slot />

        <Footer />
    </div>
</body>
</html>


<!-- ESTILOS RESETADOS EN RESET.CSS -->
<style>
    .layout {
        width: 100%;
        height: 100%;
        background: radial-gradient(ellipse 80% 80% at 50% -20%, var(--color-beige),rgba(255,235,235,0.6));
    }

    .title__title {
        font-family: 'Exo 2';
        font-size: 15rem;
        font-weight: 700;
        text-align: center;
        margin: 2rem 0 5rem 0;
        color: var(--color-red);
    }


    .layout {
        transition: opacity 0.5s ease-in-out, 
        transform 0.5s ease-in-out;
    }

    .view-transition-enter {
        opacity: 0;
        transform: translateY(20px);
    }

    .view-transition-enter-active {
        opacity: 1;
        transform: translateY(0);
    }

    .view-transition-exit {
        opacity: 1;
        transform: translateY(0);
    }

    .view-transition-exit-active {
        opacity: 0;
        transform: translateY(20px);
    }
</style>


<script>

    const viewTransition = document.querySelector('.layout');

    // Agregar clases de animación de entrada
    viewTransition.classList.add('view-transition-enter');
    requestAnimationFrame(() => {
        viewTransition.classList.add('view-transition-enter-active');
    });

    // Agregar clases de animación de salida
    window.addEventListener('beforeunload', () => {
        viewTransition.classList.add('view-transition-exit');
        requestAnimationFrame(() => {
            viewTransition.classList.add('view-transition-exit-active');
        });
    });

</script>